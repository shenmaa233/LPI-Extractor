# API密钥
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 数据库配置
DB_TYPE=sqlite
DB_NAME=laser_papers.db
DB_HOST=localhost
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password

# 应用配置
SECRET_KEY=change_this_to_a_strong_random_key_in_production
DEBUG=True
FLASK_ENV=development

# Web服务器配置
HOST=0.0.0.0
PORT=5000

# 端口冲突解决策略
# 可选值: auto_change(自动更改端口) 或 kill_process(终止占用进程)
PORT_CONFLICT_STRATEGY=auto_change

# LLM模型配置
LLM_MODEL=deepseek-chat
LLM_API_BASE=https://api.deepseek.com

# arXiv API配置
ARXIV_QUERY_DELAY=3.0
ARXIV_MAX_RESULTS=100

# 日志配置
LOG_LEVEL=INFO

# 使用方法:
# 1. 复制此文件为 .env
# 2. 填入您的实际配置值
# 3. 保存文件
# 注意: .env 文件不应提交到版本控制系统 